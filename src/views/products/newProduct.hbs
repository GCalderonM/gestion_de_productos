<div class="col-md-5 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Product</h3>
        </div>
        <div class="card-body">
            <form action="/products/new-product" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="prod_cod" placeholder="Product code..." autofocus required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="prod_name" placeholder="Product name..." required />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="prod_price" placeholder="Product price..." />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="prod_stock" placeholder="Product stock..." />
                </div>
                <button class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>